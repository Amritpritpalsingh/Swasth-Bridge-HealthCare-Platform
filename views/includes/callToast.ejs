  <!-- =================== INCOMING CALL TOAST =================== -->
<div id="incomingCallToast" class="toast position-fixed bottom-0 end-0 m-3" data-bs-autohide="false">
  <div class="toast-header">
    <strong class="me-auto">Incoming Call</strong>
  </div>
  <div class="toast-body">
    <span id="incomingCallerName"></span> is calling you!
    <div class="mt-2 pt-2 border-top">
      <button id="acceptCallBtn" class="btn btn-success btn-sm me-2">Accept</button>
      <button id="rejectCallBtn" class="btn btn-danger btn-sm">Reject</button>
    </div>
  </div>
</div>

